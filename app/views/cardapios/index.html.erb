<p id="notice"><%= notice %></p>

<h1>Cardápio</h1>

<table class = "table table-striped">
  <thead class = "thead thead-default">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Link da imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cardapios.each do |cardapio| %>
      <tr>
        <td><%= cardapio.nome %></td>
        <td><%= cardapio.descricao %></td>
        <td><%= cardapio.preco %></td>
        <td><%= image_tag cardapio.link_imagem %></td>
        <td><%= link_to 'Mostrar', cardapio %></td>
        <td><%= link_to 'Editar', edit_cardapio_path(cardapio) %></td>
        <td><%= link_to 'Destruir', cardapio, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cardápio', new_cardapio_path %>
